            <!--<mvc:mapping path="/**"/>-->
            <!--<bean id="permissionsInterceptor" class="com.h13.cardgame.jupiter.interceptor.JobTriggerInterceptor"/>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->
</beans>